<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Applied Jobs</title>
    <link href="/output.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-8" style="background-image: url('/app.png'); background-size: cover;"></body>
    <h1 class="text-3xl font-bold mb-8">Applied Jobs</h1>
    <form action="/candidates/profile?_method=GET" method="post">
        <button class="bg-blue-500 text-white px-4 py-2 rounded-lg mb-4">Profile</button>
    </form>
    <% if (jobs && jobs.length > 0) { %>
        <ul>
            <% jobs.forEach(job => { %>
                <li class="bg-white rounded-lg shadow-md p-6 mb-4">
                    <h3 class="text-xl font-bold mb-2"><%= job.title %></h3>
                    <p class="mb-2"><%= job.description %></p>
                    <p class="mb-2"><%= job.location %></p>
                    <p class="mb-2"><%= job.salary %></p>
                    <div class="flex">
                        <form action="/recruiters/view/<%= job.file %>?_method=GET" method="post" target="_blank">
                            <button class="bg-blue-500 text-white px-4 py-2 rounded-md mr-2">More Info</button>
                        </form>
                        <form action="/candidates/withdraw/<%= job._id %>?_method=DELETE" method="post">
                            <button class="bg-red-500 text-white px-4 py-2 rounded-md">Withdraw</button>
                        </form>
                    </div>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p class="text-gray-700">No jobs available.</p>
    <% } %>
</body>
</html>
