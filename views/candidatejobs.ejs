<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>

    <h1>Candidate Jobs page</h1>
    <form action="/candidates/profile?_method=GET" method="post">
        <button>Profile</button>
    </form>
    <% if (jobs && jobs.length > 0) { %>
    <ul>
      <% jobs.forEach(job => { %>
      <li>
        <div>
          <h3><%= job.title %></h3>
          <p><%= job.description %></p>
          <p><%= job.location %></p>
          <p><%= job.salary %></p>
          <form
            action="/candidates/apply/<%= job._id %>?_method=POST"
            method="post"
          >
            <button>Apply</button>
          </form>
          <form
            action="/candidates/apply/<%= job._id %>?_method=DELETE"
            method="post"
          >
            <button>withdraw</button>
          </form>
        </div>
      </li>
      <% }); %>
    </ul>
    <% } else { %>
    <p>No jobs available.</p>
    <% } %>
  </body>
</html>
